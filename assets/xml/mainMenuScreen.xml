<?xml version="1.0" encoding="utf-8" ?>
<data>
	<button name="background_btn" use_def="button_def" x="screen.center" y="screen.center" width="screen.width" height="screen.height" resize="true">
		<anchor x="0" y="0" x-flush="center" y-flush="center" />
		<graphic name="up" image="ui/TitleScreen_sized"/>
		<graphic name="over" image="ui/TitleScreen_sized"/>
		<graphic name="down" image="ui/TitleScreen_sized"/>
	</button>

	<definition name="button_def">
		<!-- <graphic name="all" image="test_button"/> -->
	</definition>

	<button name="start_game_btn" use_def="button_def">
		<anchor x="0" y="0" x-flush="center" y-flush="center" />
		<graphic name="up" image="ui/start"/>
		<graphic name="over" image="ui/start"/>
		<graphic name="down" image="ui/start"/>
	</button>

	<button name="credits_btn" use_def="button_def">
		<anchor x="0" y="0" x-flush="center" y-flush="center" />
		<graphic name="up" image="ui/credits"/>
		<graphic name="over" image="ui/credits"/>
		<graphic name="down" image="ui/credits"/>
	</button>

	<button name="exit_btn" use_def="button_def" label="Exit" color="red">
		<anchor x="0" y="0" x-flush="center" y-flush="center" />
	</button>

	
	<align name="btn_list" axis="horizontal" y="650">
		<bounds left="screen.width*0.1" right="screen.width*0.9"/>
		<objects value="start_game_btn,credits_btn"/>
	</align>
</data>